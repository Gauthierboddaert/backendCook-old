{% block body %}
    <section class="main">
        <section class="headerUserProfil">
            <div class="bgHeader">
                <div style="background-image: url({{ asset('/uploads/' ~ user.image ) }});" class="round">

                </div>
                <div class="initHeader">
                    <p>{{ user.name }} {{ user.lastName }}</p>
                </div>
                <div class="initHeader btnProfil">
                    <button class="btn btn-primary">Modifier le Profil</button>

                </div>
            </div>

        </section>
    </section>
    <hr style="width: 70%; margin-left: auto; margin-right: auto; color: black;">
    <section class="chooseFilter">
        <div>
            <a href="{{ path('app_user_index') }}">Mes recettes</a>
            <a href="{{ path('app_user_like') }}">Likes</a>
            <a href="{{ path('app_user_favories') }}">Favorites</a>
        </div>
    </section>


    <style>
        .chooseFilter{
            width: 100%;
            margin-bottom: 30px;
            display: flex;
            justify-content: center;
            border-bottom: solid 1px rgba(0, 0, 0, 0.25);

        }
        hr{
            margin-bottom: unset;
        }
        .chooseFilter div{
            padding: 15px 0;
            width: 70%;
        }

        .chooseFilter div a{
            padding: 15px 0;
            margin-right: 20px;
            color: #65676B;;
        }

        .main{

            height: 30vh;
        }
        .btnProfil{
            position: absolute;
            right: 150px;
        }
        .initHeader{
            margin-top: 180px;
            font-size: 30px;
            font-weight: bold;
        }
        .headerUserProfil{
            width: 100%;
            display: flex;
            justify-content: center;
            height: 20vh;
        }

        .bgHeader{
            background: url("{{ asset('uploads/rose.jpeg') }}") center / cover no-repeat;
            width: 80%;
            display: flex;
            border-radius: 0px 0px 10px 10px;
        }

        .circle{
            margin-top: 10px;
        }

        .round{
            margin-top:40px;
            margin-left: 40px;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 200px;
            width: 200px;
            border-radius: 50%;
            border: solid 2px #FFFFFF;
            clip-path: circle(50% at 50% 50%);
        }

        .round:hover{
            background: rgba(0, 0, 0, 0.5);
        }

        .infoUser{
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
{% endblock %}