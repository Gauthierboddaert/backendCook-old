<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css2?family=Rubik+Vinyl&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Text:wght@300&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/dd1196723f.js" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block base %}

            <section class="header">
                <div class="headerLeftPart">
                    <a href="{{ path('app_home_page_index') }}"><h1>CookingFriends</h1></a>
                </div>
                <div class="headerRightPart">
                    <nav>
                        <li>
                            <button class="btnNav" type="button">
                            <i class="fa-solid fa-plus"></i>
                            {% if app.user %}
                                <a href={{ path('app_home_page_new') }}>Ajouter une recette</a>
                            {% else %}
                                <a href={{ path('app_login') }}>Ajouter une recette</a>
                            {% endif %}
                            </button>
                        </li>
                        <li>
                            <button class="btnNav" type="button">
                                <i class="fa-solid fa-book"></i>
                                <a href={{ path('app_homepage_recette') }}>Voir toutes les recettes</a>
                            </button>
                        </li>
                        {% if app.user == null %}
                            <li>
                                <button class="btnNav" type="button">
                                    <i  class="fa-solid fa-user"></i>
                                    <a href={{ path('app_login') }}>Se connecter</a>
                                </button>
                            </li>
                        {% else %}
                            <li>
                                <button class="btnNav" type="button">
                                    <i  class="fa-solid fa-user"></i>
                                    <a href={{ path('app_user_index') }}>{{ app.user }}</a>
                                </button>
                            </li>
                        {%  endif %}
                    </nav>
                </div>
            </section>
            <div style="height: 5vh;width: 100%;background-color: white">

            </div>
        {% endblock %}
        {% block body %}

        {% endblock %}
    </body>
</html>

<style>
    body{
        background: #FAFAFA;
    }

    .LastRecette {
        width: 100%;
        text-align: center;
        margin-bottom: 40px;
        font-family: 'Red Hat Text', sans-serif;
    }

    a{
        text-decoration: none;
    }
    a h1{
        color: #ff4269;
        text-decoration: none;
    }

    .LastRecette i {
        color: #ff4269;
        margin: 2px;
    }
    .btnNav{
        background-color: white;
        text-decoration: none;
        border: none;
        display: flex;
        align-items:center;
        flex-direction: column;
        padding: 0 10px;
        border-right:2px solid #f4f3f4 ;
    }

    .btnNav i{
        color: #ff4269;
        margin: 2px;
    }

    .btnNav a{
        text-decoration: none;
        color: black;
        font-size: 12px;
        font-weight: bold;
        font-family: 'Red Hat Text', sans-serif;
    }

    .btnNav p{
        text-decoration: none;
        color: black;
        font-size: 12px;
        font-weight: bold;
        font-family: 'Red Hat Text', sans-serif;
    }


    .header{
        width: 100%;
        padding: 10px 0;
        background: red;
        display: flex;
        align-items: center;
        z-index: 1000;
        border-bottom: 2px solid #f4f3f4;

        background-color: white;
    }

    .headerLeftPart{
        width: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        font-family: 'Rubik Vinyl', cursive;
        color: #ff4269;
    }

    .headerRightPart{
        display: flex;
        justify-content: center;
        align-items: center;
        width: 50%;
        height: 100%;
    }

    .headerRightPart nav{
        display: flex;
        list-style: none;
    }

    nav li{
        padding: 10px;
    }

    .formSearchRecette{
        width: 100%;
        height: auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .formSearchRecette img {
        width: 100%;
        z-index: 0;
    }

</style>

<script src="{{ asset('js/filter.js') }}"></script>
<script src="{{ asset('js/likes.js') }}"></script>

